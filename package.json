{
  "name": "local-storage",
  "main": "./lib/main",
  "version": "0.12.1",
  "description": "Edit items stored in Atom's localStorage",
  "scripts": {
    "build": "rimraf ./lib && webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint": "tslint --project ./",
    "lint:fix": "tslint --fix --project ./",
    "prepublishOnly": "npm run build",
    "test": "npm run lint"
  },
  "keywords": [
    "localStorage",
    "local storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-local-storage"
  },
  "homepage": "https://atom.io/packages/local-storage",
  "bugs": {
    "url": "https://github.com/idleberg/atom-local-storage/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": [
      "local-storage:open-item",
      "local-storage:remove-item",
      "local-storage:save-item"
    ]
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "dependencies": {
    "@atxm/developer-console": "^0.2.1",
    "atom-select-list": "^0.7.2"
  },
  "devDependencies": {
    "@types/atom": "^1.40.1",
    "@types/node": "^13.11.0",
    "husky": "^4.2.3",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
