{
  "name": "local-storage",
  "main": "./lib/main",
  "version": "0.13.2",
  "description": "Edit items stored in Atom's localStorage",
  "scripts": {
    "build": "tsup",
    "dev": "npm run start",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:js": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepare": "husky",
    "start": "tsup --watch",
    "test": "npm run lint"
  },
  "keywords": [
    "localStorage",
    "local storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-local-storage"
  },
  "homepage": "https://atom.io/packages/local-storage",
  "bugs": {
    "url": "https://github.com/idleberg/atom-local-storage/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": [
      "local-storage:open-item",
      "local-storage:remove-item",
      "local-storage:save-item"
    ]
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "devDependencies": {
    "@atxm/developer-console": "^0.5.0",
    "@types/atom": "^1.40.10",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "atom-select-list": "^0.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-plugin-json": "^3.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^6.2.3",
    "remark-cli": "^9.0.0",
    "tslib": "^2.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
