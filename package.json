{
  "name": "local-storage",
  "main": "./lib/main",
  "version": "0.13.1",
  "description": "Edit items stored in Atom's localStorage",
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./lib",
    "dev": "npm run start",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:js": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "tsup --watch",
    "test": "npm run lint"
  },
  "keywords": [
    "localStorage",
    "local storage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-local-storage"
  },
  "homepage": "https://atom.io/packages/local-storage",
  "bugs": {
    "url": "https://github.com/idleberg/atom-local-storage/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": [
      "local-storage:open-item",
      "local-storage:remove-item",
      "local-storage:save-item"
    ]
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "dependencies": {
    "tsup": "^8.3.0"
  },
  "devDependencies": {
    "@atxm/developer-console": "^0.5.0",
    "@types/atom": "^1.40.10",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "atom-select-list": "^0.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-plugin-json": "^3.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^9.0.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet"
  }
}
